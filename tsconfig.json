{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@keith/button": [
        "./packages/button/src/index.tsx"
      ],
      "@keith/tag": [
        "./packages/tag/src/index.tsx"
      ]
    },
  },
  "include": [
    "typings.d.ts",
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "./tests/no-duplicated.ts",
    "packages/descriptions/src/demos/.tsx"
  ]
}
